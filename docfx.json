{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md",
          "restapi/**.yml",
          "restapi/**"
        ]
      },
      {
        "files": [
          "articles/**/**.md",
          "articles/**/toc.yml",
          "articles/**/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "articles/**/media/**",
          "templates/media/**",
          "node_modules/font-awesome/css/font-awesome.min.css",
          "node_modules/font-awesome/fonts/*",
          "web.config",
          "resources/logo.svg",
          "resources/favicon.ico"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "Articles",
      "_enableSearch": true,
      "_appFooter": "Copyright Â© 2018 Health Catalyst",
      "_appLogoPath": "resources/logo.svg",
      "_appFaviconPath": "resources/favicon.ico",
      "_enableNewTab": true,
      "_disableContribution": true
        },
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "templates/site"
    ],
    "postProcessors": [],
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  },
  "pdf": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api-vb/**.yml"
        ],
        "exclude": [
          "**/toc.yml",
          "**/toc.md"
        ]
      },
      {
        "files": [
          "articles/**/*.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**",
          "**/toc.md",
          "articles/toc.yml",
          "articles/**/*.yml"
        ]
      },
      {
        "files": [ 
          "pdf/toc.yml",
          "pdf/**/toc.yml",
          "pdf/**/**/toc.yml"
        ]
      }
    ],
    "template": [
        "pdf.default",
        "templates/pdf"
        ], 
    "resource": [
      {
        "files": [
          "images/**",
          "articles/**/media/**",
          "node_modules/font-awesome/css/font-awesome.min.css",
          "node_modules/font-awesome/fonts/*"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**"
        ]
      }
    ],
    "dest": "_site_pdf"
  }
}